@page
@model Temperature_Test.Pages.Temperature.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>TempMeasurement</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TempMeasurement.Temperature" class="control-label"></label>
                <input asp-for="TempMeasurement.Temperature" class="form-control" />
                <span asp-validation-for="TempMeasurement.Temperature" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="TempMeasurement.EmployeeID" class="control-label"></label>
                <select asp-for="SelectedEmployeeName" class="form-control"
                        asp-items="@Model.EmployeeNameList">
                    <option value="">Select Employee></option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="TempMeasurement.MeasureDate" class="control-label"></label>
                <input asp-for="TempMeasurement.MeasureDate" class="form-control" />
                <span asp-validation-for="TempMeasurement.MeasureDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="TempMeasurement.OfficeToday" /> @Html.DisplayNameFor(model => model.TempMeasurement.OfficeToday)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="TempMeasurement.OfficeTomorrow" /> @Html.DisplayNameFor(model => model.TempMeasurement.OfficeTomorrow)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
